.edit-profile-page {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding: 30rpx 0;
}

/* 头像部分 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.change-avatar {
  color: var(--primary-color);
  font-size: 28rpx;
}

/* 表单部分 */
.form-section {
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.subtitle {
  font-size: 24rpx;
  font-weight: normal;
  color: var(--text-gray);
}

.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.label {
  font-size: 28rpx;
  color: var(--text-gray);
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  box-sizing: border-box;
}

.picker-text {
  color: var(--text-color);
}

.textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.word-count {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: var(--text-gray);
}

/* 标签部分 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 10rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: var(--text-gray);
}

.tag.selected {
  background-color: rgba(255, 107, 129, 0.1);
  color: var(--primary-color);
}

/* 提交按钮 */
.submit-btn {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin: 60rpx auto;
  border: none;
} 