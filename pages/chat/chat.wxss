.chat-page {
  position: relative;
  padding: 0;
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 消息容器 */
.messages-container {
  flex: 1;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  margin-top: calc(env(safe-area-inset-top) + 90rpx); /* 适配顶部安全区域和导航栏高度 */
  height: calc(100vh - env(safe-area-inset-top) - 90rpx - 120rpx); /* 减去顶部安全区域、导航栏和底部输入区域高度 */
}

/* 加载中提示 */
.loading {
  padding: 30rpx;
  text-align: center;
  color: var(--text-gray);
  font-size: 28rpx;
}

/* 加载更多指示器 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-indicator {
  width: 30rpx;
  height: 30rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: var(--primary-color);
  border-radius: 50%;
  margin-right: 10rpx;
}

.loading-indicator.active {
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-more text {
  font-size: 24rpx;
  color: var(--text-gray);
}

/* 消息条目 */
.message-item {
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
  max-width: 90%;
}

/* 自己发送的消息靠右 */
.message-item.self {
  flex-direction: row-reverse;
  margin-left: auto;
}

/* 头像容器 */
.avatar-container {
  margin: 0 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

/* 消息内容 */
.message-content {
  max-width: 60%;
  display: flex;
  flex-direction: column;
}

/* 文本消息 */
.text-message {
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  word-break: break-word;
  line-height: 1.4;
  position: relative;
  margin-bottom: 10rpx;
}

/* 对方消息样式 */
.message-item.other .text-message {
  background-color: #ffffff;
  color: var(--text-color);
  border-top-left-radius: 4rpx;
  margin-right: auto;
}

/* 自己消息样式 */
.message-item.self .text-message {
  background-color: var(--primary-color);
  color: #ffffff;
  border-top-right-radius: 4rpx;
}

/* 图片消息 */
.image-message {
  border-radius: 16rpx;
  overflow: hidden;
  max-width: 400rpx;
  margin-bottom: 10rpx;
}

.image-message image {
  width: 100%;
  max-height: 400rpx;
}

/* 消息时间 */
.message-time {
  font-size: 22rpx;
  color: var(--text-gray);
  margin-top: 4rpx;
}

.message-item.self .message-time {
  text-align: right;
}

/* 底部输入区域 */
.input-container {
  border-top: 1rpx solid var(--border-color);
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
  position: relative;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.input-box {
  width: 100%;
  display: flex;
  align-items: center;
}

/* 输入框 */
.text-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin: 0 20rpx;
}

/* 按钮样式 */
.emoji-btn image, .more-btn image {
  width: 48rpx;
  height: 48rpx;
}

/* 发送按钮 */
.send-btn {
  background-color: var(--primary-color);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
}

/* 底部留白 */
.bottom-space {
  height: 60rpx;
}

.chat-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.back-btn, .more-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn image, .more-btn image {
  width: 44rpx;
  height: 44rpx;
}

/* 发送方名称 */
.sender-name {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

/* 表情面板和更多功能面板 */
.emoji-panel, .more-panel {
  width: 100%;
  height: 400rpx;
  background-color: #f9f9f9;
  border-top: 1rpx solid #e5e5e5;
  overflow: hidden;
}

.more-panel {
  display: flex;
  flex-wrap: wrap;
  padding: 40rpx 20rpx;
}

.more-item {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 20rpx;
}

.more-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.more-item text {
  font-size: 24rpx;
  color: #333333;
}

/* 隐藏TUIKit原生界面 */
.tui-kit-container {
  display: none;
}

/* 修复一些variables变量 */
page {
  --primary-color: #006fff;
  --text-color: #333333;
  --text-gray: #999999;
  --border-color: #e5e5e5;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* 设置页面样式 */
.chat-page {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: relative;
}

/* 优化iOS体验 */
.messages-container {
  -webkit-overflow-scrolling: touch;
}

/* 优化消息显示 */
.message-item.self {
  margin-left: auto;
}

.message-item.other {
  margin-right: auto;
}

/* 聊天页面容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ededed;
  position: relative;
  overflow: hidden;
}

/* 自定义导航栏 */
.chat-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: #f7f7f7;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  padding: 8px 16px;
  height: 44px;
  box-sizing: border-box;
}

.back-button {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8px;
}

.back-button image {
  width: 24px;
  height: 24px;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-name {
  font-size: 17px;
  font-weight: 600;
  color: #000000;
  line-height: 1.2;
}

.user-status {
  font-size: 12px;
  color: #999999;
  margin-top: 2px;
  line-height: 1;
}

.header-actions {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.more-text {
  font-size: 20px;
  color: #333333;
  font-weight: bold;
}

.verify-badge {
  position: absolute;
  top: 50%;
  right: 50px;
  transform: translateY(-50%);
  width: 16px;
  height: 16px;
}

.verify-badge image {
  width: 100%;
  height: 100%;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 0;
  margin-top: 44px;
  box-sizing: border-box;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px 0;
  color: #999999;
  font-size: 14px;
}

.loading-icon {
  width: 16px;
  height: 16px;
  border: 2px solid #e0e0e0;
  border-top-color: #07c160;
  border-radius: 50%;
  margin-right: 8px;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 时间分割线 */
.time-divider {
  text-align: center;
  margin: 16px 0;
}

.time-text {
  background-color: rgba(0, 0, 0, 0.1);
  color: #ffffff;
  font-size: 12px;
  padding: 4px 12px;
  border-radius: 12px;
  display: inline-block;
}

/* 消息项 */
.message-item {
  margin-bottom: 16px;
}

.message-row {
  display: flex;
  padding: 0 16px;
  align-items: flex-start;
}

.message-self {
  flex-direction: row-reverse;
}

.message-other {
  flex-direction: row;
}

/* 头像 */
.avatar-wrapper {
  margin: 0 8px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 6px;
  background-color: #f0f0f0;
}

/* 消息包装器 */
.message-wrapper {
  max-width: calc(100% - 80px);
  display: flex;
  flex-direction: column;
}

.message-self .message-wrapper {
  align-items: flex-end;
}

.message-other .message-wrapper {
  align-items: flex-start;
}

/* 昵称 */
.nickname {
  font-size: 12px;
  color: #999999;
  margin-bottom: 4px;
  margin-left: 8px;
}

/* 消息气泡 */
.message-bubble {
  border-radius: 12px;
  padding: 12px 16px;
  position: relative;
  max-width: 100%;
  word-wrap: break-word;
  word-break: break-all;
}

.bubble-self {
  background-color: #95ec69;
  color: #000000;
  border-bottom-right-radius: 4px;
}

.bubble-other {
  background-color: #ffffff;
  color: #000000;
  border-bottom-left-radius: 4px;
}

/* 消息文本 */
.message-text {
  font-size: 16px;
  line-height: 1.4;
}

/* 图片消息 */
.message-image {
  max-width: 200px;
  max-height: 200px;
  border-radius: 8px;
}

/* 表情包消息 */
.message-face {
  width: 80px;
  height: 80px;
}

/* 不支持的消息 */
.unsupported-msg {
  font-style: italic;
  color: #999999;
}

/* 发送状态 */
.send-status {
  margin-left: 8px;
  align-self: center;
}

.send-status image {
  width: 16px;
  height: 16px;
}

/* 底部占位 */
.bottom-placeholder {
  width: 100%;
}

/* 输入区域 */
.input-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f7f7f7;
  border-top: 1rpx solid #e5e5e5;
  padding: 8px 16px;
  box-sizing: border-box;
  transition: bottom 0.3s ease;
}

.input-row {
  display: flex;
  align-items: flex-end;
  gap: 8px;
}

/* 输入工具按钮 */
.input-tool {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.input-tool image {
  width: 24px;
  height: 24px;
}

/* 输入框包装器 */
.input-wrapper {
  flex: 1;
  min-height: 32px;
  max-height: 80px;
}

/* 文本输入框 */
.text-input {
  width: 100%;
  min-height: 32px;
  max-height: 80px;
  background-color: #ffffff;
  border: 1rpx solid #e5e5e5;
  border-radius: 16px;
  padding: 8px 12px;
  font-size: 16px;
  line-height: 1.4;
  box-sizing: border-box;
}

.input-placeholder {
  color: #999999;
}

/* 语音输入 */
.voice-input {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 32px;
  background-color: #ffffff;
  border: 1rpx solid #e5e5e5;
  border-radius: 16px;
}

.voice-text {
  font-size: 16px;
  color: #333333;
}

/* 发送按钮 */
.send-button {
  background-color: #07c160;
  color: #ffffff;
  padding: 8px 16px;
  border-radius: 16px;
  font-size: 16px;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 60px;
  height: 32px;
  box-sizing: border-box;
}

.send-text {
  color: #ffffff;
}

/* 快捷回复 */
.quick-reply {
  display: flex;
  gap: 8px;
  margin-top: 8px;
  padding: 0 40px;
}

.quick-item {
  background-color: #ffffff;
  border: 1rpx solid #e5e5e5;
  border-radius: 16px;
  padding: 8px 16px;
  font-size: 14px;
  color: #333333;
}

.quick-text {
  color: #333333;
}

/* 面板通用样式 */
.panel {
  position: fixed;
  left: 0;
  right: 0;
  background-color: #f7f7f7;
  border-top: 1rpx solid #e5e5e5;
  z-index: 999;
  transition: bottom 0.3s ease;
}

/* 更多功能面板 */
.more-panel {
  height: 200px;
  padding: 20px;
  box-sizing: border-box;
}

.panel-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}

.panel-item {
  width: 60px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.panel-icon {
  width: 48px;
  height: 48px;
  background-color: #ffffff;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.panel-icon image {
  width: 24px;
  height: 24px;
}

.panel-text {
  font-size: 12px;
  color: #666666;
}

/* 表情面板 */
.emoji-panel {
  height: 200px;
  padding: 20px;
  box-sizing: border-box;
}

.emoji-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.emoji-item {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  background-color: #ffffff;
}

.emoji-text {
  font-size: 24px;
}

/* 遮罩层 */
.panel-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 998;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .message-bubble {
    padding: 10px 14px;
  }
  
  .message-text {
    font-size: 15px;
  }
  
  .avatar {
    width: 36px;
    height: 36px;
  }
}

/* 安全区域适配 */
.chat-container {
  padding-bottom: env(safe-area-inset-bottom);
}

.input-area {
  padding-bottom: calc(8px + env(safe-area-inset-bottom));
}