.user-detail-page {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 30rpx;
}

/* 照片轮播 */
.photos-swiper {
  width: 100%;
  height: 750rpx;
}

.photo-item {
  width: 100%;
  height: 100%;
}

/* 信息卡片 */
.info-card {
  margin: -50rpx 30rpx 30rpx;
  padding: 30rpx;
  position: relative;
  z-index: 10;
}

.basic-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.name-age {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.age-gender {
  font-size: 28rpx;
  color: var(--text-gray);
}

.online-status {
  display: flex;
  align-items: center;
  background-color: rgba(76, 217, 100, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.online-status .dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #4cd964;
  margin-right: 8rpx;
}

.online-status text {
  font-size: 24rpx;
  color: #4cd964;
}

.profile-info {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.location {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.location .icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.location text {
  font-size: 26rpx;
  color: var(--text-gray);
}

.signature {
  font-size: 28rpx;
  color: var(--text-color);
  font-style: italic;
  margin: 20rpx 0;
  line-height: 1.5;
}

/* 标签列表 */
.tags-list {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.tag {
  background-color: rgba(255, 107, 129, 0.1);
  color: var(--primary-color);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-btn image {
  width: 80rpx;
  height: 80rpx;
  padding: 20rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.action-btn text {
  font-size: 26rpx;
  color: var(--text-gray);
}

.skip-btn image {
  background-color: #f8f8f8;
}

.like-btn image {
  background-color: rgba(255, 107, 129, 0.1);
}

.chat-btn image {
  background-color: rgba(76, 217, 100, 0.1);
}

/* 更多信息卡片 */
.more-info {
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
}

.info-item .label {
  width: 120rpx;
  font-size: 28rpx;
  color: var(--text-gray);
}

.info-item .value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
} 