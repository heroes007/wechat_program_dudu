.register-page {
  padding: 0 40rpx;
  background-color: #ffffff;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  padding: 380rpx 0 60rpx;
  text-align: center;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-gray);
}

.form-container {
  width: 100%;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.input-container {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 90rpx;
  border-radius: 12rpx;
  border: 1rpx solid var(--border-color);
  background-color: #ffffff;
}

.country-code {
  font-size: 28rpx;
  color: var(--text-color);
  margin-right: 20rpx;
  padding-right: 20rpx;
  border-right: 1rpx solid var(--border-color);
}

input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.verify-container {
  position: relative;
}

.verify-btn {
  position: absolute;
  right: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  font-size: 24rpx;
}

.verify-btn.sent {
  background-color: #eeeeee;
  color: var(--text-gray);
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  text-align: center;
  margin: 60rpx 0 40rpx;
  border: none;
}

.submit-btn.disabled {
  background-color: #f5f5f5;
  color: var(--text-gray);
}

.tips {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-gray);
  margin-top: 40rpx;
}

.link {
  color: var(--primary-color);
}

/* 登录方式选择 */
.login-choice-container {
  width: 100%;
  padding: 40rpx 0;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-btn {
  background: linear-gradient(135deg, #07c160, #00ae58);
  color: #ffffff;
}

.phone-btn {
  background: linear-gradient(135deg, var(--primary-color), #4a90e2);
  color: #ffffff;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-content .icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.btn-content .btn-text {
  font-size: 32rpx;
  font-weight: 500;
}

/* 返回按钮 */
.back-btn {
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  cursor: pointer;
}

.back-btn text {
  font-size: 28rpx;
  color: var(--primary-color);
} 