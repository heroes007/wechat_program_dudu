.complete-info-container {
  min-height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding: 0 32rpx;
}

/* 步骤指示器 */
.step-indicator {
  padding: 40rpx 0 60rpx;
  display: flex;
  justify-content: center;
}

.step-circles {
  display: flex;
  align-items: center;
  gap: 40rpx;
}

.step-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #FFF;
  color: #CCCCCC;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: 1px solid #CCCCCC
}

.step-circle.active {
  background: #636EFF;
  color: #ffffff;
}

/* 步骤内容 */
.step-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.step-header {
  margin-bottom: 80rpx;
  text-align: center;
}

.step-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #212529;
  margin-bottom: 16rpx;
}

.step-subtitle {
  font-size: 28rpx;
  color: #6c757d;
  line-height: 1.6;
}

/* 昵称设置样式 */
.nickname-container {
  padding: 0 40rpx;
}

.input-wrapper {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx 40rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #e9ecef;
  transition: border-color 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.nickname-input {
  width: 100%;
  font-size: 32rpx;
  color: #212529;
  background: transparent;
  border: none;
  outline: none;
}

.nickname-input::placeholder {
  color: #adb5bd;
}

.nickname-tip {
  text-align: center;
  font-size: 24rpx;
  color: #6c757d;
  padding: 0 20rpx;
}

/* 性别选择样式 */
.gender-options {
  display: flex;
  gap: 40rpx;
  padding: 0 40rpx;
}

.gender-option {
  flex: 1;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  cursor: pointer;
  -webkit-tap-highlight-color: transparent;
  tap-highlight-color: transparent;
}

.gender-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  font-weight: bold;
  color: #ffffff;
  font-weight: 600;
}

.male-icon {
  background: rgba(22, 169, 250, .04);
  color: #16A9FA;
}

.female-icon {
  background: rgba(187, 15, 207, .04);
  color: #FF6A71;
}

.selected-male {
  background: #16A9FA;
  color: #fff;
}

.selected-female {
  background: #FF6A71;
  color: #fff;
}

.gender-text {
  font-size: 28rpx;
  color: #212529;
  color: #000;
  text-align: center;
  font-family: "PingFang SC";
  font-style: normal;
  font-weight: 400;
}

.selected-male-text {
  color: #16A9FA;
}

.selected-female-text {
  color: #FF6A71;
}

/* 照片上传样式 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.photo-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
}

.photo-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.photo-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.photo-add {
  aspect-ratio: 1;
  background-color: #ffffff;
  border: 2rpx dashed #ced4da;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: #6c757d;
  border-radius: 24rpx;
  border: 1.5rpx solid rgba(140, 123, 253, 0.60);
  background: rgba(255, 255, 255, 0.10);
  backdrop-filter: blur(100rpx);
}

.add-icon {
  width: 34rpx;
  height: 34rpx;
}

.add-text {
  text-align: center;
  color: #000;
  text-align: center;
  font-family: "PingFang SC";
  font-size: 28rpx;
  font-style: normal;
  font-weight: 400;
  margin-top: 12rpx;
}

.add-icon {
  font-size: 48rpx;
  font-weight: 300;
}

.add-text {
  font-size: 24rpx;
}

.photo-tip {
  text-align: center;
  font-size: 24rpx;
  color: #6c757d;
}

/* 地点选择样式 */
.location-section {
  padding: 0 32rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.region-picker {
  display: block;
}

.location-display {
  background: linear-gradient(135deg, #f8f9ff 0%, #fff5f5 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.location-display:active {
  transform: scale(0.98);
  border-color: #667eea;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.1);
}

.current-location {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.location-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.location-text {
  font-size: 28rpx;
  color: #212529;
  line-height: 1.6;
  border-radius: 8px;
  background: #F9F9F9;
  display: flex;
  width: 100%;
  padding: 12px;
  justify-content: center;
  align-items: center;
  gap: 10px;
}

.location-arrow {
  font-size: 32rpx;
  color: #8e9aaf;
  font-weight: 600;
  flex-shrink: 0;
}

.location-tip {
  text-align: center;
  font-size: 26rpx;
  color: #8e9aaf;
  line-height: 1.6;
  padding: 24rpx;
  background: rgba(142, 154, 175, 0.08);
  border-radius: 16rpx;
  margin-top: auto;
  flex-shrink: 0;
}



/* 生日选择样式 */
.date-section {
  padding: 0 32rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.date-picker {
  display: block;
}

/* 底部按钮样式 */
.bottom-actions {
  padding: 40rpx 0 80rpx;
  margin-top: auto;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
}

.btn-skip {
  flex: 0 0 160rpx;
  background-color: transparent;
  color: #6c757d;
  border: 2rpx solid #dee2e6;
  border-radius: 40rpx;
  font-size: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
}

.btn-next {
  flex: 1;
  background: linear-gradient(269deg, #646AFF 1.24%, #5E80FF 66.11%, #54A2FF 98.48%);
  color: #ffffff;
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  transition: all 0.3s ease;
}

.btn-next.disabled {
  color: #fff !important;
  border-radius: 12px;
  opacity: 0.3;
  background: linear-gradient(269deg, #646AFF 1.24%, #5E80FF 66.11%, #54A2FF 98.48%);
}

.btn-next::after {
  border: none;
}

.btn-skip::after {
  border: none;
}
