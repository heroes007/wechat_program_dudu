.chat-page {
  position: relative;
  padding: 0;
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 消息容器 */
.messages-container {
  flex: 1;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

/* 加载中提示 */
.loading {
  padding: 30rpx;
  text-align: center;
  color: var(--text-gray);
  font-size: 28rpx;
}

/* 加载更多指示器 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-indicator {
  width: 30rpx;
  height: 30rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: var(--primary-color);
  border-radius: 50%;
  margin-right: 10rpx;
}

.loading-indicator.active {
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-more text {
  font-size: 24rpx;
  color: var(--text-gray);
}

/* 消息条目 */
.message-item {
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}

/* 自己发送的消息靠右 */
.message-item.self {
  flex-direction: row-reverse;
}

/* 头像容器 */
.avatar-container {
  margin: 0 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

/* 消息内容 */
.message-content {
  max-width: 60%;
  display: flex;
  flex-direction: column;
}

/* 文本消息 */
.text-message {
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  word-break: break-word;
  line-height: 1.4;
  position: relative;
  margin-bottom: 10rpx;
}

/* 对方消息样式 */
.message-item.other .text-message {
  background-color: #ffffff;
  color: var(--text-color);
  border-top-left-radius: 4rpx;
}

/* 自己消息样式 */
.message-item.self .text-message {
  background-color: var(--primary-color);
  color: #ffffff;
  border-top-right-radius: 4rpx;
}

/* 图片消息 */
.image-message {
  border-radius: 16rpx;
  overflow: hidden;
  max-width: 400rpx;
  margin-bottom: 10rpx;
}

.image-message image {
  width: 100%;
  max-height: 400rpx;
}

/* 语音消息 */
.audio-message {
  margin-bottom: 10rpx;
}

.audio-content {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  min-width: 120rpx;
  max-width: 300rpx;
}

.message-item.other .audio-content {
  background-color: #ffffff;
  justify-content: flex-start;
  border-top-left-radius: 4rpx;
}

.message-item.self .audio-content {
  background-color: var(--primary-color);
  justify-content: flex-end;
  border-top-right-radius: 4rpx;
}

.audio-icon {
  width: 32rpx;
  height: 32rpx;
}

.message-item.other .audio-icon {
  margin-right: 10rpx;
}

.message-item.self .audio-icon {
  margin-left: 10rpx;
  transform: scaleX(-1);
}

.audio-duration {
  font-size: 24rpx;
}

.message-item.other .audio-duration {
  color: var(--text-color);
}

.message-item.self .audio-duration {
  color: #ffffff;
}

/* 消息时间 */
.message-time {
  font-size: 22rpx;
  color: var(--text-gray);
  margin-top: 4rpx;
}

.message-item.self .message-time {
  text-align: right;
}

/* 底部输入区域 */
.input-container {
  border-top: 1rpx solid var(--border-color);
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
  position: relative;
}

.input-box {
  width: 100%;
  display: flex;
  align-items: center;
}

/* 输入框 */
.text-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin: 0 20rpx;
}

/* 语音按钮 */
.voice-btn image, .emoji-btn image, .more-btn image {
  width: 48rpx;
  height: 48rpx;
}

/* 发送按钮 */
.send-btn {
  background-color: var(--primary-color);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
}

/* 底部留白 */
.bottom-space {
  height: 60rpx;
}

/* 语音消息播放动画 */
.audio-content.playing .audio-icon {
  animation: pulse 1s infinite ease-in-out;
}

@keyframes pulse {
  0% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.1); }
  100% { opacity: 1; transform: scale(1); }
} 