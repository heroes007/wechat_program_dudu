.index-page {
  position: relative;
  padding: 0;
  overflow: hidden;
  height: 100vh;
  box-sizing: border-box;
}

/* 顶部标签样式 */
.top-tags {
  width: 100%;
  padding: 20rpx 30rpx;
  justify-content: flex-start;
  box-sizing: border-box;
  z-index: 10;
}

.online-tag {
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  align-items: center;
}

.online-tag .dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #4cd964;
  margin-right: 10rpx;
}

/* 卡片容器 */
.cards-container {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: relative;
}

/* 卡片样式 */
.card-item {
  width: 100%;
  height: 100%;
  position: relative;
  will-change: transform;
}

.card-content {
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
}

/* 左右滑动的样式 */
.card-item.left {
  background-color: rgba(255, 107, 129, 0.1);
}

.card-item.right {
  background-color: rgba(76, 217, 100, 0.1);
}

/* 卡片主图 */
.main-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 用户信息层 */
.user-info-layer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  padding: 30rpx 20rpx 40rpx;
  box-sizing: border-box;
  color: white;
}

.user-basic-info {
  margin-bottom: 20rpx;
}

.nickname-age {
  align-items: center;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.age {
  font-size: 28rpx;
  opacity: 0.9;
}

.profile-text {
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 16rpx;
}

/* 距离信息 */
.distance-info {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

/* 在线状态 */
.online-status {
  display: flex;
  align-items: center;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.online-status .online-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #4cd964;
  margin-right: 8rpx;
}

/* 标签列表 */
.tags-list {
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.tags-list .tag {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  padding: 6rpx 20rpx;
  font-size: 22rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

/* 操作按钮 */
.action-buttons {
  width: 100%;
  padding: 40rpx 0;
  justify-content: center;
  z-index: 10;
}

.btn-skip, .btn-like {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin: 0 30rpx;
}

.btn-skip {
  background-color: white;
}

.btn-like {
  background-color: var(--primary-color);
}

.btn-skip image, .btn-like image {
  width: 50rpx;
  height: 50rpx;
}

/* 无数据提示 */
.no-data {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-gray);
  font-size: 28rpx;
} 