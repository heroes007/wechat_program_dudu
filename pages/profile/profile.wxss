.profile-page {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 40rpx;
}

/* 未登录样式 */
.not-login .banner {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  text-align: center;
  padding: 60rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 40rpx;
}

.login-btn {
  background-color: white;
  color: var(--primary-color);
  font-size: 30rpx;
  padding: 16rpx 60rpx;
  border-radius: 40rpx;
  margin-top: 30rpx;
  border: none;
}

/* 已登录样式 */
.logged-in {
  padding: 0 30rpx;
}

/* 用户卡片 */
.user-card {
  position: relative;
  margin-top: 30rpx;
  padding-top: 100rpx;
}

.card-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.user-info {
  position: relative;
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info .avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  margin-top: -100rpx;
  position: relative;
  z-index: 2;
}

.user-detail {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  margin-right: 20rpx;
}

.tag {
  background-color: rgba(255, 107, 129, 0.1);
  color: var(--primary-color);
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.signature {
  margin-top: 16rpx;
  font-size: 28rpx;
  text-align: center;
}

.edit-btn {
  margin-top: 30rpx;
  background-color: var(--primary-color);
  color: white;
  font-size: 28rpx;
  padding: 10rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}

/* 统计卡片 */
.stats-card {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-count {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 26rpx;
  color: var(--text-gray);
}

/* 菜单列表 */
.menu-list {
  margin-top: 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.3;
}

/* 退出登录按钮 */
.logout-btn {
  margin: 50rpx auto;
  width: 60%;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 40rpx;
  background-color: white;
  color: var(--text-gray);
  font-size: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
} 